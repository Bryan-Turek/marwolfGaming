{% extends "CoreBundle::layout.html.twig" %}

{% block title "MarwolfGaming - " ~ name.subject %}

{% block content %}
    <h1>{{ name.subject }}!</h1>
	<div id="posts-list">
		{% for post in posts %}
		<div class="post" id="post_{{ post.id }}">
			<div class="user_box">
				<span class="user_title"><a href="/users/{{ post.author.name }}">{{ post.author.name }}</a></span>
				<span class="user_info">{{ post.posted|date("m/d/Y") }}</span>
			</div>
			<div class="post_content">
				{{ post.content }}
			</div>
		</div>
		{% else %}
			<div id="noPosts">No posts found!</div>
		{% endfor %}
	</div>
{% endblock %}