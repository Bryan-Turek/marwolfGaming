<!DOCTYPE html>
<html>
    <head>
        <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
		<link href='http://fonts.googleapis.com/css?family=Patua+One' rel='stylesheet' type='text/css'>
        <link rel="stylesheet" href="{{ asset('bundles/site/css/style.css') }}" type="text/css" media="all" />
        <title>{% block title %}Demo Bundle{% endblock %}</title>
        <link rel="shortcut icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>
		<div id="header">
			<h1><a href="{{ path('_welcome') }}">MarwolfGaming</a></h1>
			<ul id="menu">
				<li><a href="{{ path('_welcome') }}">Games</a></li>
				<li><a href="{{ path('_topics') }}">Topics</a></li>
			</ul>
		</div>
        <div id="wrapper">
            {% if app.session.flash('notice') %}
                <div class="flash-message">
                    <em>Notice</em>: {{ app.session.flash('notice') }}
                </div>
            {% endif %}

            <div class="content">
                {% block content %}
                {% endblock %}
            </div>
        </div>
    </body>
</html>
